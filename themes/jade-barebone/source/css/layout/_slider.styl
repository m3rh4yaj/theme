// ----------------------------
// main visual
// ----------------------------

img-width = 920px
img-height = 600px

#main-visual
  position relative
  overflow hidden
  background-color #fff
  width 100%
  height img-height
  .slides
    margin 0 auto
  img
    width img-width
    height img-height
    display block
    float left

  @media mq-tablet
    height auto
    max-height 495px
    img
      width 100%
      height auto

  @media mq-mobile
    max-height 260px

#main-visual-prev,
#main-visual-next
  backgroundTransparency(#fff, .4)
  position absolute
  top 0
  display block
  width 50%
  height img-height
  if support-for-ie
    .ie8 &
      background url('/images/general/transparent.png') repeat
  &:hover
    backgroundTransparency(#fff, .2)
  @media mq-tablet
    display none

#main-visual-prev
  left -(img-width/2)

#main-visual-next
  right -(img-width/2)

#main-visual-pager
  position absolute
  left 50%
  bottom 10px
  margin-left (-(img-width/2)+20)
  a
    display inline-block
    width 15px
    height 15px
    margin 0 10px 0 0
    border 2px solid #fff
    border-radius 10px
    if support-for-ie
      .ie8 &
        background url('/images/general/transparent.png') repeat
    &:hover
      backgroundTransparency(#fff, .5)
    &.selected
      background-color #fff
    span
      display none
  @media mq-tablet
    display none

// ----------------------------
// carousel
// ----------------------------

#carousel
  position relative
  overflow hidden
  width 100%
  height 180px
  clearfix()
  .slides
    margin 0
    padding 0
  li
    margin 0
    padding 0
    width 290px
    height 180px
    position relative
    float left
    img
      border none
      width 100%

// ----------------------------
// movie
// ----------------------------

#query-movie
  overflow hidden
  width 750px
  margin 0 auto
  padding-bottom 90px
  .slides
    margin 0
    padding 0
    clearfix()
    li
      position relative
      float left
      margin 0
      padding 0
      width 100%
      &:before
        display block
        content ""
        padding-top 56.25%
    iframe
      position absolute
      top 0
      left 0
      width 100%
      height 100%
  .query-movie-control
    position relative
    margin 20px 0 24px
    clearfix()
  .btn
    margin-top 20px

  @media mq-tablet
    width 90%
    padding-bottom 60px

#query-movie-prev,
#query-movie-next
  rem(12px)
  position absolute
  top 0
  padding 3px 10px
  background-color #869791
  color color-white
  border-radius 30px
  &:hover
    background-color darken(#869791, 20)

#query-movie-prev
  left 0

#query-movie-next
  right 0

#query-movie-pager
  margin 6px 0 0
  width 100%
  text-align center
  a
    display inline-block
    width 12px
    height 12px
    margin 0 5px
    background-color #869791
    border-radius 20px
    transition all .5s ease-in-out .1s
    &:hover
      backgroundTransparency(darken(#869791, 60), .5)
    &.selected
      backgroundTransparency(darken(#869791, 60), .5)
    span
      display none