// ----------------------------
// l-about
// ----------------------------

.l-about
  background url('/images/bg-layout01.png') no-repeat center top
  background-attachment fixed
  color color-white
  text-align center

  .tle-about
    rem(24px)
    margin 0
    padding 60px 0 0
    letter-spacing .1em
  .subtle-about
    margin 0
    padding 20px 0 60px
    letter-spacing .1em
    rem(13px)

  .col
    rem(font-size)
    overflow hidden
    height 350px
    .tle-col
      rem(24px)
      font-weight normal
    .text-left
      padding-left 6%
    .text-right
      padding-right 6%
    p
      margin 20px 0 0
      padding 0
      line-height 240%

  @media mq-tablet
    .tle-about
      rem(20px)
      padding 30px 10px 0
    .subtle-about
      rem(13px)
      padding 15px 10px 30px

    .col
      height auto
      .text-left,
      .text-right
        text-align center
        padding 40px 10px
      .tle-col
        rem(20px)
      p
        margin 1em 0 0
        line-height 1.8

  @media mq-mobile
    .tle-about
      rem(16px)
    .subtle-about
      rem(12px)
    .col
      max-height 250px

// ----------------------------
// l-profile
// ----------------------------

.l-profile
  background url('/images/bg-layout02.png') no-repeat center top
  background-attachment fixed
  text-align center

  .col
    height 540px
    ul
      margin 0 10px
      padding 0
    li
      margin 5px 0 0
      padding 0
    .tle-col
      rem(16px)
      padding 20px 0 0
      letter-spacing .1em

  .col-profile
    rem(13px)
    line-height 1.9
    margin -10px 0 0

  @media mq-tablet
    .layer-flesh-flesh
      gradationTransparency(darken(color-flesh, 10), color-white, .9, 0)

    .col
      height auto
      ul
        padding 5px 0 0
      li
        padding 5px 0 0
        &:before
          content "ãƒ»"
          padding-right 2px
      .tle-col
        rem(14px)
        padding 1em 0 0

    .col-profile
      line-height 1.7
      margin 0
      padding 40px 25px

  @media mq-mobile
    .layer-flesh-flesh
      gradationTransparency(color-flesh, darken(color-flesh, 20), .9, 0)
    .col
      min-height 350px
      .tle-col
        rem(15px)
        padding 1.5em 0 0

    .col-profile
      rem(13px)
      padding 25px 0

// ----------------------------
// l-blog
// ----------------------------

.l-blog
  background url('/images/bg-layout02.png') no-repeat center top
  background-attachment fixed
  text-align center

  .tle-blog
    rem(12px)
    margin 5px 0 0
    padding 0
    font-weight normal
    line-height 1.5

  .query-blog
    backgroundTransparency(col-background, .9)
    padding-bottom 70px
    .container
      padding-left 0
      padding-right 0
      padding-bottom 50px
      text-align left
    .thumb
      display block
      width 225px
      height 124px
      img
        max-width 225px
        max-height 124px
        transition all 0.3s ease 0s
        &:hover
          opacity(.7)
    .meta
      padding 10px 0 0
      rem(11px)
    .data
      &:after
        content "|"
        padding 0 3px

  @media mq-tablet
    width 100%
    height auto

    .tle-blog
      rem(14px)
      margin 10px auto 0
      padding 0
      width 72%
      line-height 1.7

    .query-blog
      padding-bottom 60px
      .container
        padding-bottom 30px
        text-align center
      .col
        &:after
          myHr(#0C1923, 20px)
        &:last-child
          &:after
            content ""
      .thumb
        width 90%
        max-width 390px
        height auto
        margin 0 auto
        img
          max-width 100%
          max-height 55%
      .meta
        rem(14px)
        padding-top 15px

  @media mq-mobile
    .tle-blog
      margin-right 5px
      margin-left 5px
      width auto

// ----------------------------
// l-plan
// ----------------------------

.l-plan
  background url('/images/bg-layout02.png') no-repeat center top
  background-attachment fixed
  text-align center

  .row-plan
    background transparent
    margin-left -30px
    margin-right -30px
    padding-bottom 20px
    clearfix()
    .tle-col
      padding 1em 0 0
      rem(17px)
      font-weight bold
    .col
      padding-left 10px
      padding-right 10px
      img
        border-radius 50%
        border 2px solid color-white
      .price
        rem(15px)
        color color-red
      .contact
        rem(15px)
        color color-brown2
      .btn
        margin 20px 0 0

  @media mq-tablet
    .row-plan
      margin-left -20px
      margin-right -20px
      .tle-col
        rem(18px)
        padding 20px 0 0
        font-weight normal
      .col
        padding-left 20px
        padding-right 20px
        & + .col
          padding-top 60px
        &>img
          width 100%
          max-width 324px
        p,
        .price
          margin 10px auto 0
          width 72%
        .btn
          margin-top 15px
          width 360px

  @media mq-mobile
    .row-plan
      .col
        p,
        .price
          margin-right 5px
          margin-left 5px
          width auto
        .btn
          width 100%

.modal-content
  animated(myModal, .5s)
  position fixed
  display none
  width 40%
  max-width 360px
  border 2px solid #0C1923
  background #fff
  z-index z-index-modal-content
  text-align left
  img
    width 100%
  p
    margin 0
    padding 20px
  &.open
    display block

  @media mq-tablet
    width 100%
    p
      rem(12px)

  @media mq-mobile
    overflow-y auto
    max-width auto
    max-height 100%

.l-option
  padding-bottom 90px
  h3
    rem(18px)
    margin 0
    padding 0
    color #222
    font-weight normal
  .row
    background #fff
  .text-left
    padding 30px 40px
  .col
    height 330px

  @media mq-tablet
    padding-bottom 0
    h3
      rem(16px)
    .col
      height auto

  @media mq-mobile
    .text-left
      padding 25px 0
      text-align center


