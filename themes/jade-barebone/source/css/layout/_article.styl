// ----------------------------
// page-contactform
// ----------------------------

#page-contactform
  background url('/images/bg-layout02.png') no-repeat center top
  background-attachment fixed
  text-align center
  .container
    width 900px

  @media mq-tablet
    .container
      width 100%

#page-contactform
  .area
    overflow hidden
    margin 40px auto 20px
    width 730px
    background color-white
    padding 10px 40px
    border 1px solid #eee
    bourder-radius 3px
    dl
      rem(12px)
      padding 15px 0
      border-bottom 1px dashed #ccc
    dt
      float left
      margin-right 20px
      width 140px
      line-height 35px
      letter-spacing .1em
      text-align right
      font-weight normal
      span
        position relative
        top -1px
        rem(10px)
        margin-left 2px
        color #E32525
    dd
      text-align left
    input[type="text"],
    input[type="tel"],
    input[type="email"]
    textarea
      width 400px
      padding 5px 7px
      background #F3F1E9
      border 1px solid darken(#F3F1E9, 10)
    input[type="text"],
    input[type="tel"],
    input[type="email"]
      height 35px
      letter-spacing .1em
    textarea
      rem(11px)
      line-height 1.4
    select
      width 200px
      height 35px
      border 1px solid darken(#F3F1E9, 10)
    .form-submit
      rem(13px)
      margin 15px 0
      padding 16px 0
      width 210px
      background #800606
      border 1px solid darken(#800606, 10)
      border-radius 3px
      letter-spacing 0
      &:hover
        background lighten(#800606, 10)
        letter-spacing .1em

  @media mq-tablet
    .area
      padding 0 40px 10px
      width 100%
      dl
        padding 10px 0
      dt
        float none
        margin-bottom 5px
        text-align left
      dd
        margin 0
      input[type="text"],
      input[type="tel"],
      input[type="email"]
      textarea
        width 100%
      .form-submit
        font-weight bold

  @media mq-mobile
    .area
      padding 0 10px 10px
      select
        width 100%

