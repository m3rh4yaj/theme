meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
meta(name='viewport', content='width=device-width')

if config.author
  meta(name='author', content=config.author)

block page_description
  meta(name='description', content=config.description)

title
  block window_title
    = config.title
//- link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)

link(href=theme.path.favicon, rel='icon')

link(rel='alternate', href=theme.rss ? theme.rss : config.root + 'atom.xml', title=config.title, type='application/atom.xml')

link(href='http://fonts.googleapis.com/css?family=Kreon:400,700', rel='stylesheet')

link(rel='stylesheet', href=config.root + 'css/style.css')

<!--[if lt IE 9]>
script(type="text/javascript", src="//code.jquery.com/jquery-1.9.1.min.js")
script(type="text/javascript", src="#{theme.path.js}ie.min.js")
<![endif]-->
<!--[if gte IE 9]><!-->
script(type="text/javascript", src="//code.jquery.com/jquery-2.1.1.min.js")
<![endif]-->

meta(property='og:site_name', content=config.title)
meta(property='og:title', content=page.title)
meta(property='og:url', content=url_for(page.path))
meta(property='og:locale', content='ja_JP')
meta(property='og:image', content=url_for("images/stylus.png"))
if is_home()
  meta(property='og:type', content='website')
  meta(property='og:description', content=config.description)
unless is_home()
  meta(property='og:type', content='article')
  meta(property='og:description', content=config.description)