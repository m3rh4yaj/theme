// ----------------------------
// l-flow
// ----------------------------

.l-flow
  background url('/images/bg-layout02.png') no-repeat center top
  background-attachment fixed
  text-align center

  .row
    margin 40px 40px 90px
    padding 0
  .col
    rem(13px)

  li
    padding 36px
    text-align left
    .tle-col
      rem(18px)
      color color-brown2
      margin 0
      padding 0
    &.flow-list02,
    &.flow-list03
      @extend .is-brown2
      .tle-col
        color color-white
    &.flow-list04
      color color-default
      background transparent

  @media mq-tablet
    .row
      margin 30px 0 60px

    li
      padding 20px 15px
      .tle-col
         rem(16px)
      &.flow-list03
        color color-default
        background transparent
        .tle-col
          color color-brown2
      &.flow-list04
        background color-brown
        color #fff
        .tle-col
          color color-white

    @media mq-mobile
      .col
        rem(12px)
      li
        rem(12px)
        .tle-col
          rem(14px)

// ----------------------------
// l-faq
// ----------------------------

.l-faq
  background url('/images/bg-layout02.png') no-repeat center top
  background-attachment fixed
  text-align center
  .faq-copy
    margin 0
  .layer-white
    padding 0 0 40px
  .container
    width 880px
    padding 0

  @media mq-tablet
    .container
      margin 0 auto
      width 96%

  @media mq-mobile
    .head
      padding 0 20px

#faq-accordion
  text-align left
  border 1px solid color-gray
  margin-top 40px
  padding 10px 10px 15px
  background color-white
  clearfix()
  .tle-q
    position relative
    rem(13px)
    margin 0
    padding 12px 0 10px 45px
    font-weight bold
    cursor pointer
    &:before
      @extend .font-roman
      absolute-center(true, false)
      rem(14px)
      size 30px
      content "Q"
      left 5px
      display block
      line-height 28px
      border-radius 50%
      background color-brown2
      color color-white
      text-align center
      transition all 0.3s ease 0s
    &:hover
      &:before
        background lighten(color-brown2, 20)
  & [aria-expanded="false"]
    border-bottom 1px solid color-gray
  p
    rem(12px)
    margin 0
    padding 12px 10px 10px 20px
    border-bottom 1px solid color-gray

  @media mq-tablet
    .tle-q
      rem(font-size)
    p
      rem(font-size)

  @media mq-mobile
    .tle-q
      rem(12px)
      padding-left 40px
      &:before
        left 0
    p
      rem(12px)
      padding 15px 10px 15px 20px


// ----------------------------
// l-social
// ----------------------------

.l-social
  background url('/images/bg-layout02.png') no-repeat center top
  background-attachment fixed
  text-align center

.index-social
  width 1000px
  margin 0 auto
  padding 60px 0
  .btn-social
    overflow hidden
    width 240px
    height 50px
    line-height 50px
    margin 0 20px
    padding 0
    background color-white
    a
      display block
      float left
      width 75%
      font-weight bold
      &:before
        rem(16px)
        @extend .myicon
        margin-right 10px
    span
      display block
      float right
      width 25%
      color color-default
      cursor default

  .sns-share
    hoverCoverLeft(lighten(facebook, 20))
    background facebook
    &:before
      content icon-facebook
  .sns-tweet
    hoverCoverLeft(lighten(twitter, 20))
    background twitter
    &:before
      position relative
      top 2px
      content: icon-twitter
  .sns-hatebu
    hoverCoverLeft(lighten(hatebu, 20))
    background hatebu
    &:before
      position relative
      top 3px
      content: icon-hatebu

  .no-count
    background-color #C8C8C8

  @media mq-tablet
    margin-top -20px
    width auto
    .btn
      display block
    .btn-social
      margin 20px auto 0
      width 60%

    @media mq-mobile
      .btn-social
        width 90%

